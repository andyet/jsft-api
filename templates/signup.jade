extends layout

block content
  .panel.panel-info

    .panel-heading
      h3.panel-title Signup for wolves

    .panel-body
      form(method='POST', action='/wolves', class='form')
        .form-group
          label Username
          input(name='username', placeholder='username', class='form-control')

        .form-group
          label Password
          input(name='password', placeholder='password', class='form-control')

        button(type='submit', class='btn btn-info') start howling
